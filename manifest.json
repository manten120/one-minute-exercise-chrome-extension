{
  "name": "強制1分間エクササイズ",
  "version": "1.0",
  "description": "サイト「強制1分間エクササイズ」を毎時0分に開く",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://rocky-basin-37839.herokuapp.com/main"],
      "js": ["jquery-3.5.1.min.js", "contentScript.js"]
    }
  ],
  "permissions": ["activeTab", "storage"],
  "manifest_version": 2
}
